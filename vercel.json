{
  "version": 2,
  "builds": [
    {
      "src": "apps/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/apps/client"
      },
      "buildCommand": "pnpm build",
      "installCommand": "pnpm install"
    },
    {
      "src": "apps/artboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/apps/artboard"
      }
    },
    {
      "src": "apps/nestjs-app/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/apps/server/main.js"
    },
    {
      "src": "/client/(.*)",
      "dest": "/dist/apps/client/$1"
    },
    {
      "src": "/artboard/(.*)",
      "dest": "/dist/apps/artboard/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/apps/client/index.html"
    }
  ]
}