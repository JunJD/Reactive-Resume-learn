{
  "version": 2,
  "builds": [
    {
      "src": "apps/server/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/apps/server/**"
        ],
        "engines": {
          "node": "20.13.1"
        }
      }
    },
    {
      "src": "apps/client/src/**/*",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/apps/client"
      }
    },
    {
      "src": "apps/artboard/src/**/*",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/apps/artboard"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/apps/server/main.js"
    },
    {
      "src": "/artboard/(.*)",
      "dest": "/dist/apps/artboard/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/apps/client/$1"
    }
  ]
}
